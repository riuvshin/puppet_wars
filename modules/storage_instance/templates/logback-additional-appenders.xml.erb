<included>
    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>syslog.codenvycorp.com</syslogHost>
        <port>514</port>
        <facility>user</facility>
        <suffixPattern>%-41(%date[%.15thread]) %-45([%-5level] [%.30logger{30} %L]) [%X{user}][%X{currentTenant}][%X{sessionId}] - %msg%n
        </suffixPattern>
    </appender>
    <appender name="email" class="ch.qos.logback.classic.net.SMTPAppender">
        <SMTPHost>localhost</SMTPHost>
        <SMTPPort>25</SMTPPort>
        <SSL>false</SSL>
        <to>stg-reports@codenvy.com</to>
        <from>stg-reports@codenvy.com</from>
        <subject>Storage puppet error: %logger{20} - %m</subject>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%-41(%date[%.15thread]) %-45([%-5level] [%.30logger{30} %L]) - %msg%n</pattern>
        </layout>
    </appender>
